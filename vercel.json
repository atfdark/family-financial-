{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "react-frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "build"
            }
        }
    ],
    "crons": [
        {
            "path": "/api/cron",
            "schedule": "0 0,6,12,18 * * *"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server.js"
        },
        {
            "src": "/(.*)",
            "dest": "/react-frontend/$1",
            "headers": {
                "Cache-Control": "public, max-age=0, must-revalidate"
            }
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/react-frontend/index.html"
        }
    ]
}